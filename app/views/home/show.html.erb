<% if current_user  %>
  <h1>
    <ul style="list-style: none;">
      <li><%= image_tag(current_user.image, width: "250", height: "250") %></li>
      <li><%=  current_user.name%></li>
      <li><%=  current_user.nickname%></li>
      <li><%=  current_user.email%></li>
      <li>Followers:<%=  current_user.followers%></li>
      <li>Following:<%=  current_user.following%></li>
    </ul>
  </h1>
  <ul class="showlinks", style="list-style: none;">
    <li><%= link_to "Repositories", repos_path %></li>
    <li><%= link_to "Friends Events", events_path %></li>
    <li><%= link_to "Organizations", orgs_path %></li>
    <li><%= link_to "My Actions", actions_path %></li>
  </ul>
  <% else %>
<h1>Welcome to Github Apicurious</h1>
<% end %>
